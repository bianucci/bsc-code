<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.samson.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Konfiguration"
            class="de.samson.application.ConfigPerspective"
            id="last.view.Composition.perspective">
      </perspective>
      <perspective
            class="de.samson.application.DataPerspective"
            id="de.samson.application.dataPerspective"
            name="Datenansicht">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="last.view.Composition.perspective">
         <view
               closeable="true"
               id="de.samson.configViewer.configView"
               minimized="false"
               moveable="true"
               ratio="0.3f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="de.samson.modbusphp.views.MainView"
               minimized="false"
               moveable="true"
               ratio="0.7f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="de.samson.ui.descfiles.descfilemanager"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="de.samson.modbusphp.views.MainView"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="de.samson.application.dataPerspective">
         <view
               closeable="true"
               id="de.samson.dataviewer.views.ReglerDataExplorer"
               minimized="false"
               moveable="true"
               ratio="0.3f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Datei">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Beenden">
            </command>
         </menu>
         <menu
               label="Bearbeiten">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Einstellungen"
                  style="push">
            </command>
         </menu>
         <menu
               label="Hilfe">
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar ">
         <toolbar
               id="last.view.explorer.toolbar1">
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  style="push">
            </command>
            <separator
                  name="de.samson.application.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="de.samson.application.switchPerspective"
                  icon="icons/perspecitve_switcher.gif"
                  style="toggle">
               <visibleWhen
                     checkEnabled="false">
               </visibleWhen>
            </command>
            <separator
                  name="de.samson.application.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="de.samson.service.histDataCollector.handler.HistDataCollection"
                  label="Hist Data"
                  style="toggle">
               <visibleWhen>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="samson_fh_ffm"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.samson.application.application"
            name="Samson Rich Client">
         <property
               name="appName"
               value="Samson Rich Client">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupProgressRect"
               value="0,0,0,0">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.samson.application.handler.SwitchPerspective"
            id="de.samson.application.switchPerspective"
            name="switchPerspective">
      </command>
   </extension>
</plugin>
